<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:padding="30dp">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:background="@color/background_gradient_end"
        android:drawableLeft="@drawable/baseline_email"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Parola123*"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:padding="20dp"
        android:background="@color/background_gradient_end"
        android:drawableLeft="@drawable/baseline_lock"
        android:drawablePadding="20dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:backgroundTint="@color/teal_700"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/text_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or sign in with"
        android:textColor="@color/lb_grey"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/text_facebook"
        android:id="@+id/icons">

        <ImageView
            android:id="@+id/facebook_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/google_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:src="@drawable/google_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="@color/lb_grey" />

    <TextView
        android:id="@+id/goToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        android:textColor="@color/com_facebook_blue"
        android:textSize="18sp"
        android:linksClickable="true"
        android:layout_gravity="center"
        />

</LinearLayout>