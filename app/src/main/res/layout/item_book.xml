<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:layout_margin="15dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/bookImage"
            android:padding="3dp"
            android:text="Book Title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bookSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookTitle"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/bookImage"
            android:padding="3dp"
            android:text="Subtitle"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/bookAuthors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookSubtitle"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/bookImage"
            android:padding="3dp"
            android:text="Authors"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/deleteBook"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookAuthors"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/bookImage"
            android:backgroundTint="@color/teal_700"
            android:padding="3dp"
            android:text="Remove"
            android:textSize="11sp" />

        <Button
            android:id="@+id/moveToFinished"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookAuthors"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/deleteBook"
            android:backgroundTint="@color/teal_700"
            android:padding="3dp"
            android:text="Move to finished books"
            android:textSize="11sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>